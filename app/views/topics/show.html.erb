<h1><%= @topic.title %></h1>

	<div class="container">
<%= form_for [ @topic, @new_bookmark ] do |f| %>
  <%= f.label :Bookmark %>
  <%= f.text_field :url %>

  <%= f.submit "Save" %>
  <% end %>

<% @bookmarks.each do |bookmark| %>
	<div class="row">
		<div class="col-md-4">
			<p><%= link_to bookmark.url, bookmark.url, target: "_blank" %></p>
		</div>

    <% if current_user %>
			<div class="col-md-4">
				<%= link_to "Update Bookmark", edit_topic_bookmark_path( @topic, bookmark ), class: 'btn btn-danger btn-sm' %>
			</div>
    <% end %>

    <% if current_user %>
			<div class="col-md-4">
				<%= link_to "Delete Bookmark", [ @topic, bookmark ], method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: 'Are you sure you want to delete this bookmark?' } %>
			</div>
    <% end %>
	</div>
<% end %>
	</div>

<div class="col-md-4">
    <% if current_user %>
        <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this topic?' } %>
    <% end %>
</div>

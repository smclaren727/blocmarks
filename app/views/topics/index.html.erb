<h1>All Topics</h1>
<% if current_user %>
    <%= link_to "New Topic", new_topic_path, class: 'btn btn-success' %>
<% end %>

<% @topics.each do |topic| %>
    <div class="media">
        <div class="media body">
            <h4 class="media-heading">
                <%= link_to topic.title, topic %>
            </h4>
        </div>
    </div>
<% end %>
